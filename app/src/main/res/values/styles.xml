<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/statusbar_color</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.CuLiveBus.SearchView</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="SplashTheme" parent="CustomNoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SettingsTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/statusbar_color</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="CustomNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:statusBarColor">@color/statusbar_color</item>
    </style>

    <style name="Divider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TextAppearance.CuLiveBus.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.CuLiveBus.Title" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="TextAppearance.CuLiveBus.SearchedPlaceTitle" parent="TextAppearance.CuLiveBus.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.CuLiveBus.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="TextAppearance.CuLiveBus.Small.Inverse" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="TextAppearance.CuLiveBus.DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.CuLiveBus.DialogBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/oxygen</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.CuLiveBus.Light.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/oxygen</item>
    </style>

    <style name="TextAppearance.CuLiveBus.Dialog.PositiveButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="TextAppearance.CuLiveBus.SettingsHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/oxygen_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.CuLiveBus.SettingsButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="Widget.CuLiveBus.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.CuLiveBus.Body</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Widget.CuLiveBus.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.CuLiveBus.Small.Inverse</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Widget.CuLiveBus.DirectionEditText" parent="Widget.CuLiveBus.EditText">
        <item name="android:paddingStart">@dimen/margin_large</item>
        <item name="android:paddingEnd">@dimen/margin_large</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.CuLiveBus.Light.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.CuLiveBus.Light.Button</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.CuLiveBus.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.CuLiveBus.SettingsButton</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.CuLiveBus.SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_80</item>
        <item name="android:textCursorDrawable">@drawable/white_cursor</item>
    </style>

    <style name="Widget.CuLiveBus.SettingsButton" parent="@style/Widget.CuLiveBus.TextButton">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Widget.CuLiveBus.Dialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.CuLiveBus.Dialog.PositiveButton</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="Widget.CuLiveBus.ThirdPartySoftwareButton" parent="Widget.CuLiveBus.TextButton">
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
    </style>

    <style name="Widget.CuLiveBus.DirectionSearchButton" parent="Widget.CuLiveBus.Light.Button">
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="Theme.CuLiveBus.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.CuLiveBus.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textViewStyle">@style/Widget.CuLiveBus.TextView</item>
    </style>
</resources>
