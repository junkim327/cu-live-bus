<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_in_bus_stops_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:elevation="16dp"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/textview_bus_stop_name_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto"
        android:text="@string/no_info"
        android:textColor="@color/textMainColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textview_bus_stop_code_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview_bus_stop_name_bottom_sheet"
        android:layout_below="@+id/textview_bus_stop_name_bottom_sheet"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="@string/no_info"
        android:textColor="@color/textSubColor" />

    <TextView
        android:id="@+id/textview_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textview_bus_stop_code_bottom_sheet"
        android:layout_alignBottom="@+id/textview_bus_stop_code_bottom_sheet"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textview_bus_stop_code_bottom_sheet"
        android:fontFamily="@font/roboto"
        android:text="|"
        android:textColor="@color/textSubColor" />

    <TextView
        android:id="@+id/textview_distance_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview_divider"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textview_divider"
        android:fontFamily="@font/roboto"
        android:text="@string/no_info"
        android:textColor="@color/bottom_sheet_distance_textview_color" />
</RelativeLayout>