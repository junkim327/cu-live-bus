<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_icon_setting_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="64dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@+id/text_app_version_fragment_setting_contents"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:id="@+id/text_app_version_fragment_setting_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="2"
                android:fontFamily="@font/oxygen"
                android:gravity="center_horizontal"
                android:text="Version 1.0.1"
                app:layout_constraintBottom_toTopOf="@+id/layout_edit_favorites_setting_content"
                app:layout_constraintTop_toBottomOf="@+id/image_icon_setting_content"
                tools:layout_editor_absoluteX="163dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_weight="3"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/header_user_setting" />

            <View
                android:id="@+id/view1"
                style="@style/Divider"
                android:layout_marginStart="16dp" />

            <LinearLayout
                android:id="@+id/layout_edit_favorites_setting_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/layout_contact_us_settting_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_app_version_fragment_setting_contents">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Edit Favorites"
                    android:textColor="@color/textMainColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                style="@style/Divider"
                android:layout_marginStart="72dp" />

            <LinearLayout
                android:id="@+id/layout_contact_us_settting_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/layout_data_attribution_setting_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_edit_favorites_setting_content"
                tools:layout_editor_absoluteX="8dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Contact Us"
                    android:textColor="@color/textMainColor"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/view3"
                style="@style/Divider"
                android:layout_marginStart="72dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_weight="5"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/header_legal"
                android:textSize="14sp" />

            <View
                android:id="@+id/view"
                style="@style/Divider"
                android:layout_marginStart="16dp" />

            <LinearLayout
                android:id="@+id/layout_data_attribution_setting_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/layout_privacy_policy_setting_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_contact_us_settting_content"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Data attribution"
                    android:textColor="@color/textMainColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:id="@+id/view4"
                style="@style/Divider"
                android:layout_marginStart="72dp" />

            <LinearLayout
                android:id="@+id/layout_privacy_policy_setting_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_data_attribution_setting_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Privacy policy"
                    android:textColor="@color/textMainColor"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>