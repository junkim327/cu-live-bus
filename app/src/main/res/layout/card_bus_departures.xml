<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_bus_departures"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="4dp">

    <TextView
        android:id="@+id/text_bus_name_card_bus_departures"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/oxygen_bold"
        android:text="@string/no_info"
        android:textAlignment="textStart"
        android:textColor="@color/textMainColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/text_direction_card_bus_departures"
        app:layout_constraintEnd_toStartOf="@+id/ticker_one_card_bus_departures"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_direction_card_bus_departures"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/oxygen"
        android:text="@string/no_info"
        android:textAlignment="textStart"
        android:textColor="@color/textSubColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ticker_two_card_bus_departures"
        app:layout_constraintStart_toStartOf="@+id/text_bus_name_card_bus_departures"
        app:layout_constraintTop_toBottomOf="@+id/text_bus_name_card_bus_departures" />

    <TextView
        android:id="@+id/ticker_one_card_bus_departures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/oxygen"
        android:text="@string/no_info"
        android:textColor="@color/textMainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ticker_two_card_bus_departures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_bus_name_card_bus_departures"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6m 15s" />

    <TextView
        android:id="@+id/ticker_two_card_bus_departures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/oxygen"
        android:text="@string/no_info"
        android:textColor="@color/textMainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_direction_card_bus_departures"
        app:layout_constraintTop_toBottomOf="@+id/ticker_one_card_bus_departures"
        tools:text="1m 25s" />

</android.support.constraint.ConstraintLayout>