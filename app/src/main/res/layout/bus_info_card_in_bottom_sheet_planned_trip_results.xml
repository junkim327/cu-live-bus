<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_bus_icon_bus_info_card_in_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingEnd="-4dp"
        android:paddingStart="-4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_bus_name_bus_info_card_in_bottom_sheet"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_directions_bus_black_24dp" />

    <TextView
        android:id="@+id/text_bus_name_bus_info_card_in_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/oxygen"
        android:text="220S Illini"
        android:textColor="@color/textMainColor"
        app:layout_constraintBottom_toBottomOf="@+id/image_bus_icon_bus_info_card_in_bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_bus_icon_bus_info_card_in_bottom_sheet" />
</android.support.constraint.ConstraintLayout>